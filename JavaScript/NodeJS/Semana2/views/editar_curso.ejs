<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>  
    </head>
  <body>
    <%- include('navar'); %>
    
<div class="container">
  <br>
    <h1>Editar Curso:</h1>
    <form action="/api/curso/editarCurso" method="POST">
       
       <% if(error) {%>
       <%= mensaje%>
       <%}%>
       <% if(!error) {%>

        <div class="mb-3">           
          <input type="hidden" class="form-control" name="id" value="<%= editarCurso._id %>"  >
        </div>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="claveProducto" value="<%= editarCurso.claveProducto %>" readonly>
        <label for="floatingInput">Clave:</label>
      </div>


      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="nombre" value="<%= editarCurso.nombre %>" required>
        <label for="floatingInput">Nombre:</label>
      </div>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" name="descripcion" value="<%= editarCurso.descripcion %>"  required>
        <label for="floatingInput">Descripcion:</label>
      </div>

      <div class="form-floating mb-3">
        <input type="number" class="form-control" id="floatingInput" name="cantidad" value="<%= editarCurso.cantidad %>"  required>
        <label for="floatingInput">Cantidad:</label>
      </div>

      <div class="form-floating mb-3">
        <input type="number" class="form-control" id="floatingInput" name="precio"  value="<%=editarCurso.precio %>"  required>
        <label for="floatingInput">Precio:</label>
      </div>


        <button type="submit" class="btn btn-primary">Editar</button>
        <%}%>
      </form>
</div>
   

</body>
</html>