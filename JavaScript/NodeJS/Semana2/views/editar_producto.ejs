<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>  
    </head>
  <body>
    <%- include('navar'); %>
    
<div class="container">
    <h1>Editar Producto</h1>
    <form action="/api/products/editar" method="POST">
       
       <% if(error) {%>
       <%= mensaje%>
       <%}%>
       <% if(!error) {%>
        <div class="mb-3">
           
            <input type="hidden" class="form-control" name="id" value="<%= producto._id %>" required>
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Clave</label>
            <input type="text" class="form-control" name="claveProducto" value="<%= producto.claveProducto %>" readonly>
          </div>
        
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Nombre</label>
          <input type="text" class="form-control" name="nombre" value="<%= producto.nombre %>" required>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label" >Descripcion</label>
            <input type="text" class="form-control" name="descripcion" value="<%= producto.descripcion %>"  required>
          </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Cantidad</label>
            <input type="number" min="1" max="500" class="form-control" name="cantidad" value="<%= producto.cantidad %>"  required>
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Precio</label>
            <input type="number" min="1"  class="form-control" name="precio"  value="<%= producto.precio %>"  required>
        </div>
     

        <button type="submit" class="btn btn-primary">Editar</button>
        <%}%>
      </form>
</div>
   

</body>
</html>