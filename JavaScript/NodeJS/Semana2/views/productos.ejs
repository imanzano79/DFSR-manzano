                    <td><%= producto.cantidad%></td>
                    <td><%= producto.precio%></td>
                    <td>
                        <a class="btn btn-warning" href="/api/products/editar/<%= producto._id%>" >Editar</a>
                        <a class="btn btn-danger" href="/api/products/delete/<%= producto._id%>" >Eliminar</a>
                    </td>
                </tr>
                <% }); %>
                <% } %>
            <%if(error) {%>
            <p><%= mensaje%></p>
            <%  }%>
